@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h4 class="text-primary">
				Category List
			</h4>
		</div>
		<div class="col-6">
			<h2 class="text-primary text-end pb-3">
				<a asp-page="/Categories/create" class="btn btn-primary">
					<i class="fa-solid fa-circle-plus"></i> Create New Category
				</a>
			</h2>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.CategoryList.OrderBy(o=>o.DisplayOrder))
			{
				<tr>
					<td>@obj.Name</td>
					<td>@obj.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group text-end" role="group">
							<a asp-page="/Categories/edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2">
								<i class="fa-solid fa-pen-to-square"></i> Edit
							</a>
							<a asp-page="/Categories/delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
								<i class="fa-solid fa-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>